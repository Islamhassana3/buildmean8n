{
  "name": "buildmean8n",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Professional-grade n8n-style workflow automation platform",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "start:debug": "NODE_ENV=development node --inspect=0.0.0.0:9229 server.js",
    "dev:server": "NODE_ENV=development node --watch --inspect=9229 server.js",
    "clean": "rimraf apps/*/dist packages/*/dist",
    "dev": "npm-run-all --parallel dev:api dev:web",
    "dev:api": "npm run dev --workspace @buildmean8n/api",
    "dev:web": "npm run dev --workspace @buildmean8n/web",
    "build": "npm-run-all build:packages build:apps",
    "build:packages": "npm-run-all --parallel build:core build:workflows build:nodes build:ui",
    "build:apps": "npm-run-all --parallel build:api build:web",
    "build:core": "npm run build --workspace @buildmean8n/core",
    "build:workflows": "npm run build --workspace @buildmean8n/workflows",
    "build:nodes": "npm run build --workspace @buildmean8n/nodes",
    "build:ui": "npm run build --workspace @buildmean8n/ui",
    "build:api": "npm run build --workspace @buildmean8n/api",
    "build:web": "npm run build --workspace @buildmean8n/web",
  "lint": "eslint --no-error-on-unmatched-pattern \"{apps,packages}/**/*.{ts,tsx}\"",
    "format": "prettier --write \"{apps,packages}/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc -b",
    "test": "npm-run-all --parallel test:api test:web",
    "test:api": "npm run test --workspace @buildmean8n/api",
    "test:web": "npm run test --workspace @buildmean8n/web",
    "prepare": "node ./tools/scripts/prepare-husky.mjs"
  },
  "keywords": [
    "n8n",
    "workflow",
    "automation",
    "react",
    "fastify",
    "typescript"
  ],
  "dependencies": {
    "express": "^4.19.2"
  },
  "author": "BuildMean8n Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@types/node": "^20.14.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "turbo": "^2.0.3",
    "typescript": "^5.5.4",
    "globals": "^15.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Islamhassana3/buildmean8n.git"
  },
  "bugs": {
    "url": "https://github.com/Islamhassana3/buildmean8n/issues"
  },
  "homepage": "https://buildmean8n.com"
}
